<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Managed Device Form View -->
        <record id="view_managed_device_form" model="ir.ui.view">
            <field name="name">managed.device.form</field>
            <field name="model">managed.device</field>
            <field name="arch" type="xml">
                <form string="Device">
                    <sheet>
                        <group>
                            <group>
                                <field name="serial_number"/>
                                <field name="model_id"/>
                                <field name="type"/>
                                <field name="owner"/>
                            </group>
                            <group>
                                <field name="installation_date"/>
                                <field name="pm_cycle"/>
                                <field name="pm_unit"/>
                                <field name="last_pm_counter"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Metrics">
                                <field name="metrics_ids">
                                    <tree editable="bottom">
                                        <field name="device_id"/>
                                        <field name="reading"/>
                                        <field name="date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_managed_device_tree" model="ir.ui.view">
            <field name="name">managed.device.tree</field>
            <field name="model">managed.device</field>
            <field name="arch" type="xml">
                <tree string="Managed Devices">
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="type"/>
                    <field name="owner"/>
                    <field name="installation_date"/>
                    <field name="pm_cycle"/>
                    <field name="pm_unit"/>
                    <field name="last_pm_counter"/>
                </tree>
            </field>
        </record>

        <record id="action_managed_device_form" model="ir.actions.act_window">
            <field name="name">Managed Devices</field>
            <field name="res_model">managed.device</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_managed_Devices" name="Devices" parent="menu_managed_model" sequence="11" action="action_managed_device_form"/>

    </data>
</odoo>
